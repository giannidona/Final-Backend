<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav class="bg-red-500 flex justify-between p-5">
      <div>
        <a href="/home">LOGO</a>
      </div>
      <div class="flex">
        <a href="/home">home</a>
        {{#if isAdmin}}
          <a class="px-2" href="/api/productManager">product manager</a>
          <a href="/api/users">user manager</a>
        {{/if}}
        <a class="px-2" href="/cart">cart</a>
      </div>
    </nav>

    <h2 class="text-center font-bold my-10">PRODUCTS IN CART</h2>
    <section class="container text-center m-auto">
      {{#each cart.products}}
        <div class="bg-green-500 inline-flex mx-auto">
          <p class="mx-5">{{this.product.prod_name}}</p>
          <p class="mx-5">{{this.quantity}}</p>
          <p class="mx-5">${{this.price}}</p>
        </div>
      {{/each}}
      <div class="mt-5">
        <a class="bg-yellow-500 p-2" href="/ticket">Finalize purcharse</a>
      </div>
    </section>

  </body>
</html>