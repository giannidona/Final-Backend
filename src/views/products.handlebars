{{#each products}}
  <div class="bg-red-500 m-2">
    <p>NAME: {{this.name}}</p>
    <p id="stock">STOCK:{{this.stock}}</p>
    <p>PRICE: {{this.price}}</p>
    <p>DESCRIP: {{this.description}}</p>
    <div class="product-actions">
      <button class="btn-add-to-cart" data-product-id="{{this._id}}">Agregar al
        carrito</button>
    </div>
  </div>
{{/each}}

<script src="/static/js/cart.js"></script>