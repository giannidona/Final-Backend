<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>CREATE PRODUCT</title>
  </head>
  <body class="">
    <nav class="bg-red-500 flex justify-between p-5">
      <div>
        <a href="/home">LOGO</a>
      </div>
      <div class="flex">
        <a href="/home">home</a>
        <a class="px-2" href="/chat">chat</a>
        <a class="px-2" href="/api/productManager">product manager</a>
        <a href="/api/usersManager">user manager</a>
        <a class="px-2" href="/cart">cart</a>
      </div>
    </nav>

    <section class="flex">
      <form
        class="mx-auto mt-5 bg-black text-white rounded"
        action="/api/productManager"
        method="post"
        enctype="multipart/form-data"
      >
        <p class="text-center">CREATE PRODUCT</p>
        <div class="m-5">
          <div>
            <label for="prod_name">PRODUCT NAME</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="text"
              id="prod_name"
              name="prod_name"
            />
          </div>
        </div>
        <div class="m-5">
          <div>
            <label for="description">DESCRIPTION</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="text"
              id="description"
              name="description"
            />
          </div>
        </div>
        <div class="m-5">
          <div>
            <label for="stock">STOCK</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="number"
              id="stock"
              name="stock"
            />
          </div>
        </div>
        <div class="m-5">
          <div>
            <label for="price">PRICE</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="number"
              id="price"
              name="price"
            />
          </div>
        </div>
        <div class="m-5">
          <div>
            <label for="prod_image">PRODUCT IMAGE</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="file"
              id="prod_image"
              name="file"
            />
          </div>
        </div>
        <div class="m-5 text-center">
          <button
            class="bg-white text-black rounded px-2 font-bold"
            type="submit"
          >CREATE</button>
        </div>
      </form>
      <form
        class="mx-auto mt-5 bg-black text-white rounded"
        action="/api/productManager/delete"
        method="post"
      >
        <p class="text-center">DELETE PRODUCT</p>
        <div class="m-5">
          <div>
            <label for="prodId">PRODUCT ID</label>
          </div>
          <div>
            <input
              class="text-black rounded mt-2"
              type="text"
              id="prodId"
              name="prodId"
            />
          </div>
        </div>
        <div class="m-5 text-center">
          <button
            class="bg-white text-black rounded px-2 font-bold"
            type="submit"
          >DELETE</button>
        </div>
      </form>
    </section>
  </body>
</html>