<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <nav class="bg-red-500 flex justify-between p-5">
      <div>
        <a href="/home">LOGO</a>
      </div>
      <div class="flex">
        <a href="/home">home</a>
        <a class="px-2" href="/chat">chat</a>
        <a class="px-2" href="/api/productManager">product manager</a>
        <a href="/api/usersManager">user manager</a>
        <a class="px-2" href="/cart">cart</a>
      </div>
    </nav>

    <h2 class="text-center font-bold my-10">PRODUCTS</h2>
    <section class="container m-auto grid grid-cols-3 gap-4 text-center">
      {{#each products}}
        <div class="bg-green-500">
          <img src="../../static/{{this.prod_image}}" alt="" />
          <p>{{this.prod_name}}</p>
          <p>{{this.description}}</p>
          <p>${{this.price}}</p>
          <p>{{this.stock}} in stock</p>
          <form action="/cart/{{this._id}}" method="post">
            {{#if this.outOfStock}}
              <button
                type="button"
                class="bg-gray-400 my-2"
                id="out-of-stock"
                disabled
              >out of stock</button>
            {{else}}
              <button
                type="submit"
                class="bg-orange-200 my-2"
                id="add-to-cart"
              >add to cart</button>
            {{/if}}
          </form>
        </div>
      {{/each}}
    </section>
    <section class="my-5 text-center text-2xl">
      <div>
        {{#if prevLink}}
          <a class="bg-red-500 p-2 rounded" href="{{prevLink}}">previous page</a>
        {{/if}}

        {{#if nextLink}}
          <a class="bg-red-500 p-2 rounded" href="{{nextLink}}">next page</a>
        {{/if}}
      </div>
    </section>
  </body>
</html>